<div class="col-md-6">
  <h3>Add a Trip</h3>
  <form class="form-horizontal" {{action "addTrip" on="submit"}}>
    <div class="form-group">
      <label for="trip-name">Name</label>
      {{input value=trip.name class="form-control" id="trip-name"}}
    </div>
    <div class="form-group">
      <label for="trip-destination">Destination</label>
      {{input value=trip.destination class="form-control" id="trip-destination"}}
    </div>
    <div class="form-group">
      <label for="trip-startDate">Start Date</label>
      {{pikaday-input value=trip.startDate class="form-control" id="trip-startDate"}}
      <!-- {{input value=trip.startDate class="form-control" id="trip-startDate"}} -->
    </div>
    <button type="submit" class="btn btn-default">Submit</button>
  </form>

</div>


{{outlet}}
