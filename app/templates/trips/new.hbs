  <h3>Add a Trip</h3>
  <form class="form-horizontal" {{action "addTrip" on="submit"}}>
    <div class="form-group">
      <label for="trip-name">Name</label>
      {{input value=name class="form-control" id="trip-name" placeholder="Give your trip a name!"}}
    </div>
    <div class="form-group">
      <label for="trip-destination">Destination</label>
      {{input value=destination class="form-control" id="trip-destination" placeholder="Where are you going?"}}
    </div>
    <div class="form-group">
      <label for="trip-startDate">Start Date</label>
      {{pikaday-input value=startDate class="form-control" id="trip-startDate" firstDay=0 placeholder="When do you leave?"}}
    </div>
    <div class="form-group">
      <label for="trip-endDate">End Date</label>
      {{pikaday-input value=endDate class="form-control" id="trip-endDate" firstDay=0 placeholder="When do you come back?"}}
    </div>
    <button type="submit" class="btn btn-default">Submit</button>
  </form>



{{outlet}}
